<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Main Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background and Text -->
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- ActionMenu and ActionBar -->
        <item name="actionBarStyle">@style/AppActionBar_style</item>
        <item name="android:textColorPrimary">@color/accent</item>

    </style>

    <!-- ActionMenu and ActionBar Styling -->
    <style name="AppActionBar_style" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleText_style</item>
    </style>

    <style name="TitleText_style" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_title</item>
    </style>

    <!-- Preference Theme -->
    <style name="PreferenceTheme" parent="Theme.AppCompat.Light">

        <!-- Colour Switching to Give a dark Preference Theme -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_light</item>
        <item name="android:textColorSecondary">@color/grey</item>


        <item name="android:alertDialogTheme">@style/PreferencesDialogTheme</item>

    </style>

    <style name="PreferencesDialogTheme">

        <!-- Text item Colours -->
        <item name="android:textColor">@color/text_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/text_dark</item>

        <!-- Window Styling -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

    </style>

</resources>
