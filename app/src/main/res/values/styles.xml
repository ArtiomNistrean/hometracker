<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Main Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background and Text -->
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- ActionMenu and ActionBar -->
        <item name="actionBarStyle">@style/AppActionBar_style</item>
        <item name="android:textColorPrimary">@color/accent</item>

    </style>

    <!-- ActionMenu and ActionBar Styling -->
    <style name="AppActionBar_style" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleText_style</item>
    </style>

    <style name="TitleText_style" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_title</item>
    </style>

</resources>
